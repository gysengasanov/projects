import telebot
from telebot import types
TOKEN = ''
bot = telebot.TeleBot(TOKEN)


#–ü–æ–¥–ø–∏—Å–∫–∞ –Ω–∞ –∫–∞–Ω–∞–ª—ã
def start_markup():
	markup = types.InlineKeyboardMarkup(row_width=True)
	link_keyboard = types.InlineKeyboardButton(text="üì¢1=–π –ö–∞–Ω–∞–ª", url="https://t.me/+gBo1zH68fj0xZjk1")
	link_keyboard2 = types.InlineKeyboardButton(text="üì¢2=–π –ö–∞–Ω–∞–ª", url="https://t.me/dsfgfdfgdf")
	check_kyboard = types.InlineKeyboardButton(text="–ü—Ä–æ–≤–µ—Ä–∏—Ç—å üîÑ", callback_data="check")
	markup.add(link_keyboard, link_keyboard2,check_kyboard)
	return markup

@bot.message_handler(commands=['start'])
def start(message):
	chat_id = message.chat.id
	first_name = message.chat.first_name
	#p = open("C:\\Users\\alexandr\\Desktop\\291496.jpg", 'rb')
	#bot.send_photo(chat_id, p)
	bot.send_message(chat_id, f'–ü—Ä–∏–≤–µ—Ç,{first_name},\n ‚úÖ–î–ª—è –ø–æ–ª—É—á–µ–Ω–∏—è –¥–æ—Å—Ç—É–ø–∞ –ø–æ–¥–ø–∏—à–∏—Ç–µ—Å—å –Ω–∞ –∫–∞–Ω–∞–ª—ã !‚úÖ',reply_markup=start_markup())

def check(call):
	status = ['creator','administrator','member']
	for i in status:
		if i == bot.get_chat_member(chat_id ="-1001420859572", user_id=call.message.chat.id).status:
			check2(call)
			break
	else:
		bot.send_message(call.message.chat.id,'‚ùó–î–ª—è –ø–æ–ª—É—á–µ–Ω–∏—è –¥–æ—Å—Ç—É–ø–∞ –ø–æ–¥–ø–∏—à–∏—Ç–µ—Å—å –Ω–∞ –∫–∞–Ω–∞–ª—ã‚ùó',reply_markup=start_markup())

@bot.callback_query_handler(func = lambda call: True)
def callback(call):
	if call.data == 'check':
		bot.delete_message(chat_id=call.message.chat.id,message_id=call.message.id)
		check(call)

def check2(call):
	status = ['creator','administrator','member']
	for i in status:
		if i == bot.get_chat_member(chat_id = '-1001898538440', user_id=call.message.chat.id).status:
			bot.send_message(call.message.chat.id, '–°–ø–∞—Å–∏–±–æ —á—Ç–æ –ø–æ–¥–ø–∏—Å–∞–ª–∏—Å—å!\n üçø–î–ª—è –ø–æ–∏—Å–∫–∞ —Ñ–∏–ª—å–º–æ–≤ –≤–≤–µ–¥–∏—Ç–µ /film üçø')
			break
	else:
		bot.send_message(call.message.chat.id,'–î–ª—è –ø–æ–ª—É—á–µ–Ω–∏—è –¥–æ—Å—Ç—É–ø–∞ –ø–æ–¥–ø–∏—à–∏—Ç–µ—Å—å –Ω–∞ –∫–∞–Ω–∞–ª—ã!',reply_markup=start_markup())

@bot.message_handler(commands=['film'])
def film(message):
	
	bot.send_message(message.chat.id, 'üçø–ß—Ç–æ–±—ã –Ω–∞–π—Ç–∏ —Ñ–∏–ª—å–º, –ø–µ—Ä–µ–π–¥–∏—Ç–µ —Å—é–¥–∞ - https://t.me/+y6t2ZC2FOy5lZmE9 üçø\n üçø–î–∞–ª–µ–µ –≤ –ø–æ–∏—Å–∫–µ –≤–≤–µ–¥–∏—Ç–µ –∫–æ–¥ —Ñ–∏–ª—å–º–∞, –∫ –ø—Ä–∏–º–µ—Ä—É 000 üçø')



bot.polling(none_stop=False, interval=0)
